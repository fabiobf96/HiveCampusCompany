<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" prefWidth="500.0" style="-fx-border-color: grey; -fx-border-radius: 5;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane VBox.vgrow="ALWAYS">
         <center>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox spacing="20.0">
                     <children>
                        <Label text="Select type of stay" />
                        <HBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Button mnemonicParsing="false" prefWidth="90.0" text="6 MONTHS" />
                              <Button mnemonicParsing="false" prefWidth="90.0" text="12 MONTHS" />
                              <Button mnemonicParsing="false" prefWidth="90.0" text="24 MONTHS" />
                              <Button mnemonicParsing="false" prefWidth="90.0" text="36 MONTHS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="20.0">
                     <children>
                        <Label text="Select start of stay" />
                        <VBox alignment="CENTER" spacing="10.0">
                           <children>
                              <HBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Button mnemonicParsing="false" prefWidth="90.0" text="SEPTEMBER" />
                                    <Button mnemonicParsing="false" prefWidth="90.0" text="OCTOBER" />
                                    <Button mnemonicParsing="false" prefWidth="90.0" text="NOVEMBER" />
                                    <Button mnemonicParsing="false" prefWidth="90.0" text="DECEMBER" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Button mnemonicParsing="false" prefWidth="90.0" text="JANUARY" />
                                    <Button mnemonicParsing="false" prefWidth="90.0" text="FEBRUARY" />
                                    <Button mnemonicParsing="false" prefWidth="90.0" text="MARCH" />
                                    <Button mnemonicParsing="false" prefWidth="90.0" text="APRIL" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Button mnemonicParsing="false" prefWidth="90.0" text="MAY" />
                                    <Button mnemonicParsing="false" prefWidth="90.0" text="JUNE" />
                                    <Button mnemonicParsing="false" prefWidth="90.0" text="JULY" />
                                    <Button mnemonicParsing="false" prefWidth="90.0" text="AUGUST" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" prefHeight="30.0" style="-fx-background-color: #469508;" text="Send Lease Request" textFill="WHITE" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </center>
         <top>
            <VBox style="-fx-background-color: #D9D9D9;" BorderPane.alignment="CENTER">
               <children>
                  <Label text="LEASE REQUEST FORM">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
         </top>
      </BorderPane>
   </children>
